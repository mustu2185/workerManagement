<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/project_view_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Project Name"
            android:textAlignment="center"
            android:textSize="50dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/project_view_users_button"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Users"
                android:textAlignment="center"
                android:textSize="25dp"
                android:width="200dp"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/project_view_households_button"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Households"
                android:textAlignment="center"
                android:textSize="25dp"
                android:width="200dp"
                android:background="@color/colorPrimaryDark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/project_view_workers_button"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Workers"
                android:textAlignment="center"
                android:textSize="25dp"
                android:width="200dp"
                android:background="@color/colorPrimaryDark"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>